{
  "rules": {
    "import/extensions": "off", // .js로 import 가능하도록
    "class-methods-use-this": "off", // static으로 빼는 것이 가독성이 좋지 않음
    "no-await-in-loop": "off",
    "no-constant-condition": "off" // while (true) 사용 위함
  },
  "overrides": [
    {
      "files": ["./src/**"]
    }
  ],

  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "extends": ["airbnb", "prettier"]
}
